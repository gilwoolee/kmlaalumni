<% comment_name = 'comment_' + @likeable.id.to_s %>
<% if @likeable.likes.length > 0 %>
  <% num_likes = @likeable.likes.length.to_s + '명이 좋아합니다' %>
  $("#<%= comment_name + '_like_stats' %>").html("· <%= escape_javascript(link_to num_likes, get_likes_url(comment_id: @likeable), class: 'get_likes_link') %>");
<% else %>
  $("#<%= comment_name + '_like_stats' %>").html('');
<% end %>
$("#<%= comment_name + '_like_link' %>").html('좋아요 취소');
$("#<%= comment_name + '_like_link' %>").attr('href', '<%= dislike_url(comment_id: @likeable) %>');
