<% comment_name = 'comment_' + @comment.id.to_s %>
<% if @comment.likes.length > 0 %>
  <% num_likes = @comment.likes.length.to_s + '명이 좋아합니다' %>
  $("#<%= comment_name + '_like_stats' %>").html("<%= link_to num_likes, get_comment_likes_url(@comment), class: 'get_comment_likes_link' %>");
<% else %>
  $("#<%= comment_name + '_like_stats' %>").html('');
<% end %>
$("#<%= comment_name + '_like_link' %>").html('좋아요');
$("#<%= comment_name + '_like_link' %>").attr('href', '<%= like_comment_url(@comment) %>');

