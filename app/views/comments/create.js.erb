<% commentable_name = @commentable.class.name.downcase + '_' + @commentable.id.to_s %> 
<% if @comment.errors.blank? %>
  $("<%= '#' + commentable_name + '_get_more_comments_link_container' %>").html('<%= escape_javascript(render partial:'comments/get_more_comments_link', locals:{commentable: @commentable}) %>');
  $("<%= '#' + commentable_name + '_comments' %>").append('<%= escape_javascript(render @comment) %>');
  $("<%= '#' + commentable_name + '_comment_error_message' %>").empty();
  $("<%= '#' + commentable_name + '_comment_content' %>").val('');
<% else %>
   $("<%= '#' + commentable_name + '_comment_error_message' %>").html('<%= @comment.errors.first[1] %>');
<% end %>
