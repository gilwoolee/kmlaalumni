<% posting_name = 'posting_' + @comment.posting_id.to_s %>
<% if @comment.errors.blank? %>
  $("<%= '#' + posting_name + '_comments' %>").append('<%= escape_javascript(render @comment) %>');
  $("<%= '#' + posting_name + '_comment_error_message' %>").empty();
  $("<%= '#' + posting_name + '_comment_content' %>").val('');
<% else %>
   $("<%= '#' + posting_name + '_comment_error_message' %>").html('<%= @comment.errors.first[1] %>');
<% end %>
