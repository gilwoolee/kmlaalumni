<!DOCTYPE html>
<html>
<head>
  <title>민족사관고등학교 동문회</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag asset_path('kmla.ico') %>
  <link href='http://api.mobilis.co.kr/webfonts/css/?fontface=NanumGothicWeb'
        rel='stylesheet' type='text/css' />
</head>
<body>
  <% if @notice %>
    <div id='notice'><%= @notice %></div>
  <% end %>
  <div id='horizontalbar_container'>
      <ul id ="horizontalbar">
        <li id='bar_logo'>
           <a href='/'><%= image_tag(asset_path('logo.png'), size:"100x20") %></a>
        </li>
        <li><%= link_to "#{current_user.wave}기 #{current_user.name}", profile_url(current_user), class: 'sidebar_link' %></li>
        <li class='bar_title', value=1>
          Kmla Connect
          <ul>
            <li>menu1</li>
            <li>menu2</li>
            <li>menu3</li>
          </ul>                  
        </li>
        <li>동문회
         <ul>
            <li>menu1</li>
            <li>menu2</li>
            <li>menu3</li>
          </ul>   
        </li>
          
        <li>내 소모임</li>
        <li>네트워크</li>
        <li><%= link_to '로그아웃', logout_url, id:'logout_link', class: 'sidebar_option_link', method: :delete %></li>
      </ul>
      
  </div>
  <div id='wrapper'>
    <div id='sidebar_container' style='display:none'>
      <div class='sidebar'>
        
        <div class='sidebar_title'><%= current_user.wave %>기 <%= current_user.name %></div>
        <div class='sidebar_link_container float-right'>
          <%= link_to '뉴스피드', root_url, class:'sidebar_link' %>
        </div>
        <div class='sidebar_link_container float-right'>
          <%= link_to '프로필', profile_url(current_user), class: 'sidebar_link' %>
        </div>
        
        <div><%= image_tag(asset_path 'sidebar_divider.png') %></div>
        
        <div class='sidebar_title'>KMLA Connect</div>
        <div class='sidebar_link_container float-right'>
          <%= link_to '커리어노트', careernotes_url, class:'sidebar_link' %>
        </div>
        
        <div><%= image_tag(asset_path 'sidebar_divider.png') %></div>
        
        <div class='sidebar_title'>동문회</div>
        <div class='sidebar_link_container float-right'>
          <%= link_to '공지사항', announcement_url, class:'sidebar_link' %>
        </div>
        <div class='sidebar_link_container float-right'>
          <%= link_to '뉴스레터', newsletter_url, class:'sidebar_link' %>
        </div>
        <div class='sidebar_link_container float-right'>
          <%= link_to '정관', regulations_url, class:'sidebar_link' %>
        </div>
        
        <div><%= image_tag(asset_path 'sidebar_divider.png') %></div>
        
        <div class='sidebar_title'>내 소모임</div>
        <% for group in current_user.groups %>
          <div class='sidebar_link_container float-right'><%= link_to group.name, group_url(group), class:'sidebar_link' %></div>
        <% end %>
        <div class='sidebar_link_container float-right'>
          <%= link_to '소모임 찾기', groups_url, class: 'sidebar_option_link' %>
        </div>
        <div class='sidebar_link_container float-right'>
          <%= link_to '+ 소모임 만들기', new_group_url, class: 'sidebar_option_link' %>
        </div>
       
        <div><%= image_tag(asset_path 'sidebar_divider.png') %></div>
        
        <div class='sidebar_title'>네트워크</div>
        <div class='sidebar_link_container float-right'>
          <%= link_to '동문 검색', network_url, class:'sidebar_link' %>
        </div>
        <div class='sidebar_link_container float-right'>
          <%= link_to '학교별 동문 검색', network_school_url, class:'sidebar_link' %>
        </div>
        <div class='sidebar_link_container float-right'>
          <%= link_to '직장별 동문 검색', network_organization_url, class:'sidebar_link' %>
        </div>
        
        <div><%= image_tag(asset_path 'sidebar_divider.png') %></div>
        
        <div class='sidebar_link_container float-right'>
          <%= link_to '로그아웃', logout_url, id:'logout_link', class: 'sidebar_option_link', method: :delete %>
        </div>
      </div>
    </div>
    <div id='main_container'>
         <%= yield %>     
    </div>
    <div id='dialog_box' style='display:none'>
      <div id='dialog_header'>
        <div id='dialog_title'></div>
      </div>
      <div id='dialog_content'>
         Loading...
      </div>
      <div id='dialog_footer'>
        <div id='dialog_close_link'><%= link_to '닫기', '#', id: 'dialog_close_link' %></div>
      </div>
    </div>
  </div>
  
  <script type="text/javascript">
      
    var timezone = jstz.determine();
    document.cookie = 'time_zone='+timezone.name()+';';
    
    $('body').on('focus', 'textarea', function(){
      $(this).autosize();  
    });
    
    $('body').on('keydown', '.comment_textarea', function (e) {
      if (e.which == 13) {
        e.preventDefault();
        $(this).closest('form').submit();
      }
    });
    
    $('body').on('click', '.get_likes_link', function(event) {
      event.preventDefault();
      $('#dialog_box').show();
      $.ajax({ 
        url: this.href,
        type: 'get',
        dataType: 'script'
      });
    });
    
     $("#horizontalbar_container").mouseover(function () {
       $(this).css("opacity","1.0");
     });
     
      $(window).scroll(function () {
       if ($(this).scrollTop()==0) 
         $("#horizontalbar_container").css("opacity","1.0");
       else
         $("#horizontalbar_container").css("opacity","0.5");
     });
     
     $("#horizontalbar_container").mouseleave(function () {
      if ($(this).scrollTop()!=0) 
         $(this).css("opacity","0.5");
     });
    
    $('body').on('click', '#dialog_close_link', function(event){
      event.preventDefault();
      $('#dialog_title').html('');
      $('#dialog_content').html('Loading...');
      $('#dialog_box').hide();
    });
      
    $(document).ready( function() {
      $('input, textarea').placeholder();
      $('li ul','#horizontalbar').hide();
    });
    $('li','#horizontalbar').mouseover(function () {
    // var menu_id="submenu_"+$(this).data("id");
      $('ul',this).fadeIn();
    });
    
    $('li','#horizontalbar').mouseleave(function () {
    // var menu_id="submenu_"+$(this).data("id");
      $('ul',this).fadeOut();
    });
  </script>
