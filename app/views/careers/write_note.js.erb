<% careernote_id = 'employment_' + @employment.id.to_s + '_careernote' %>
<% if @careernote.errors.blank? %>
  $("<%= '#' + careernote_id + '_error_message' %>").empty();
  $("<%= '#' + careernote_id + '_form_container' %>").empty();
  $("<%= '#' + careernote_id + '_body' %>").html("<%= @careernote.content %>");
  $("<%= '#' + careernote_id + '_update_link' %>").html("<%= escape_javascript(render partial: 'careers/careernote_update_link', locals: {employment: @employment}) %>");
<% else %>
  $("<%= '#' + careernote_id + '_error_message' %>").html("<%= @careernote.errors.first[1] %>");
<% end %>
