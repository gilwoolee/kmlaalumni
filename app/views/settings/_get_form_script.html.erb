<script text="javascript">
  $(document).ready( function() {
  
    function process_click(form_container_id, url) {
      form_container = '#' + form_container_id
      if ($(form_container).is(':empty')) {
        $.ajax({
          url: url,
          type: 'get',
          dataType: 'script',
        });
      } else {
        $(form_container).empty();
      }
    }
    
    $(".get_form_link").click( function(event) {
      event.preventDefault();
      form_container_id = $(this).next().attr('id');
      process_click(form_container_id, this.href);
    });

  });
</script>
