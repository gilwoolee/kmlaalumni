<% if @successfully_updated %>
  $('<%= '#update_' + @target + '_error_message' %>').empty();
  $('<%= '#update_' + @target + '_form_link' %>').html('수정');
  $('<%= '#' + @target + '_body' %>').html("<%= escape_javascript(render partial:'network/'+ @target, locals:{user: @user}) %>");
<% else %>
  $('<%= '#update_' + @target + '_error_message' %>').html('<%= @user.errors.first[1] %>');
<% end %>
