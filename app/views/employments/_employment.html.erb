<div id="<%= 'employment_' + employment.id.to_s %>">
  <div><%= employment.organization.name %></div>
  <% if employment.position %>
    <div><%= employment.position %></div>
  <% end %>
  <% if employment.start_year %>
    <div>
      <%= employment.start_year.year %> ~
      <% if employment.end_year %>
        <%= employment.end_year.year %>
      <% else %>
         현재
      <% end %>
    </div>
  <% end %>
</div>
<% if update %>
  <%= render partial: 'settings/update_employment_form_link', locals: {employment: employment} %>
<% end %>
