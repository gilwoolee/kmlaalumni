<% if @organization.valid? %>
  $('#employments').append("<%= escape_javascript(render partial: 'employments/create_employment', locals: {employment: @employment}) %>");
  $('#add_employment_form_error_message').empty();
  $('#organization_name_field').val('');
<% else %>
  $('#add_employment_form_error_message').html("<%= @organization.errors.first[1] %>");
<% end %>
