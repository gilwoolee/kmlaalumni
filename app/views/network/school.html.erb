<div id='header'>
  <div class='header_title float-left'>학교별 동문 검색</div>
</div>

<div class='search_list'>
  <% for school in @schools %>
    <div class='search_list_elem'>
      <div class='search_link'><%= link_to school.name, search_school_url(school), remote: true %></div>
      <div id="<%= 'school_' + school.id.to_s + '_alumnis' %>" class='search_result'>
      </div>
    </div>
  <% end %>
</div>
