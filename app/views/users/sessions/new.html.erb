<div id='wrapper'>
  <div id='signin_container' class='center'>
    <div id='logo_container' class ='logo center float-left'>
      <a href='<%= root_url %>'><%= image_tag asset_path('logo.png') %></a>
    </div>
    <div class='signin_form_container float-right'>
      <div id='signin_warning' class='warning'>
        <% if flash[:warning] %>
          <%= flash[:warning] %>
        <% end %>
      </div>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class='form_fields float-left'>
          <ul>
            <li><%= f.text_field :email, placeholder: "이메일", autocomplete: :off, class:'signin_textfield' %></li>
            <li><%= f.password_field :password, placeholder: "비밀번호", autocomplete: :off, class:'signin_textfield' %></li>
            <li>
              <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %> 로그인 상태 유지 /
                <span>	
                  <a href='<%= signup_url %>'>동문회에 가입하기</a>
                </span>
              <% end -%>
            </li>
          </ul>
        </div>
        <div class='form_submit float-right'><%= image_submit_tag asset_path('signin_submit_button.png') %></div>
      <% end %>
    </div>
  </div>
  <div id='signin_footer' class='center'>
    <div id='signin_link' class='center'>
      <!--<a href='#' %>아이디/비밀번호를 잃어버리셨나요?</a>-->
    </div>
    <div id='footer_bar' class='center'>
      <%= image_tag asset_path('footer_bar.png') %>
    </div>
  </div>
</div>

