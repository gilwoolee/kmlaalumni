<% if @verified %>
  $('#signup_message').html("<b><%= @user.wave.to_s + '기 ' + @user.name %></b> 동문님, 환영합니다! <b>이메일</b>과 <b>비밀번호</b>를 입력해주세요");
  $('#signup_form_new_user_info_section').show();
  $('#signup_form_submit').show();
  $('#verify_alumni_form_container').hide();
  $("#signup_form_verify_alumni_name > #user_name").val('<%= @user.name %>');
  $("#signup_form_verify_alumni_student_number > #user_student_number").val('<%= @user.student_number %>');
<% else %>
  $('#signup_message').html("동문 인증에 <b>실패</b>했습니다. <b>이름</b>과 <b>학번</b>을 다시 입력해주세요");
  $('#signup_form_new_user_info_section').hide();
  $('#signup_form_submit').hide();
  $('#verify_alumni_form_container').show();
  $("#signup_form_verify_alumni_name > #user_name").val('');
  $("#signup_form_verify_alumni_student_number > #user_student_number").val('');
<% end %>